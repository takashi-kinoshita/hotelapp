<h1>ホテル検索</h1>
<%= form_tag search_rooms_path, method: :get, class: "form-inline my-2 my-lg-0" do %>
  <div class="form-group">
    <%= label_tag :area, "エリア:", class: "mr-2" %>
    <%= select_tag :area, options_for_select([['東京', '東京'], ['大阪', '大阪'], ['京都', '京都'], ['札幌', '札幌']], params[:area]), include_blank: '全て', class: "form-control mr-2" %>
  </div>
  <div class="form-group">
    <%= label_tag :keyword, "キーワード:", class: "mr-2" %>
    <%= text_field_tag :keyword, params[:keyword], class: "form-control mr-2" %>
  </div>
  <%= submit_tag '検索', class: "btn btn-primary" %>
<% end %>

<% if @rooms.present? %>
  <p class="mt-3"><%= @rooms.count %>件の施設が見つかりました。</p>
  <% @rooms.each do |room| %>
    <div class="card mt-3">
      <div class="card-body">
        <h5 class="card-title"><%= room.name %></h5>
        <p class="card-text"><%= room.address %></p>
        <p class="card-text"><%= room.description %></p>
        <p class="card-text"><%= room.price %>円/日</p>
        <%= link_to '詳細', room_path(room), class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
<% else %>
  <p class="mt-3">該当する施設が見つかりませんでした。</p>
<% end %>
