<h1>プロフィール編集</h1>

<%= form_with model: @user, url: user_path(@user), method: :patch, local: true do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :icon_image, "アイコン画像" %>
    <%= form.file_field :icon_image %>
  </div>

  <div class="field">
    <%= form.label :name, "名前" %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :self_introduction, "自己紹介" %>
    <%= form.text_area :self_introduction %>
  </div>

  <div class="actions">
    <%= form.submit "更新" %>
  </div>
<% end %>
