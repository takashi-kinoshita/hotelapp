<h1>予約詳細</h1>

<div>
  <h2><%= link_to @reservation.room.name, room_path(@reservation.room) %></h2>
  <p><%= @reservation.room.description %></p>
  <p>合計料金: <%= @reservation.total_price %>円</p>
  <p>チェックイン日: <%= @reservation.check_in.strftime("%Y/%m/%d") %></p>
  <p>チェックアウト日: <%= @reservation.check_out.strftime("%Y/%m/%d") %></p>
  <p>予約確定日時: <%= @reservation.created_at.strftime("%Y/%m/%d %H:%M") %></p>
</div>

<%= link_to "予約を編集", edit_reservation_path(@reservation), class: "btn btn-primary" %>
<%= link_to "予約を削除", reservation_path(@reservation), method: :delete, data: { confirm: "予約を削除しますか？", toggle: "modal", target: "#reservation-delete-modal" }, class: "btn btn-danger" %>

<%= link_to "戻る", reservations_path %>

<div class="modal fade" id="reservation-delete-modal" tabindex="-1" role="dialog" aria-labelledby="reservation-delete-modal-label" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="reservation-delete-modal-label">予約を削除</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>以下の予約を削除しますか？</p>
        <p><%= @reservation.room.name %></p>
        <p>合計料金: <%= @reservation.total_price %></p>
        <%= image_tag @reservation.room.image.presence || "default_room.png", alt: "施設画像" %>
        <p>チェックイン日: <%= @reservation.check_in.strftime("%Y/%m/%d") %></p>
        <p>チェックアウト日: <%= @reservation.check_out.strftime("%Y/%m/%d") %></p>
        <p>予約確定日時: <%= @reservation.created_at.strftime("%Y/%m/%d %H:%M") %></p>
      </div>
      <div class="modal-footer">
        <%= button_to "削除", reservation_path(@reservation), method: :delete, class: "btn btn-danger" %>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">キャンセル</button>
      </div>
    </div>
  </div>
</div>
